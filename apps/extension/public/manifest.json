{
  "manifest_version": 3,
  "name": "Pagepin",
  "version": "1.0.0",
  "description": "Save bookmarks to Pagepin with one click",
  "permissions": [
    "activeTab",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://pagepin.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save to Pagepin"
    }
  }
} 